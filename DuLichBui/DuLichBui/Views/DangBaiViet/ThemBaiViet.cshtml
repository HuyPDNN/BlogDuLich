@model Model.EF.BaiViet

@{
    ViewBag.Title = "ThemBaiViet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })


    </script>
}
<h2>Thêm bài viết</h2>
@{
    var ten = (DuLichBui.Common.TaiKhoanLogin)Session[DuLichBui.Common.CommonConstants.USER_SESSION];
}
@if(ten != null)
{
    <div id="colorlib-main">
        <section class="ftco-section ftco-no-pt ftco-no-pb">
            @using (Html.BeginForm("ThemBaiViet", "DangBaiViet", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>BaiViet</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Thể loại
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.MaTheLoai, ViewBag.listtheloai as SelectList, "Mời Chọn thể loại", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        Tên tác giả
                        <div class="col-md-10">
                            @Html.EditorFor(model => ten.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaThanhVien, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Tiêu đề
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Miêu tả bài viết
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MieuTa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MieuTa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Nội dung
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" }, id = "note" })
                            @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Ngày đăng
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgayDang, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.NgayDang, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Link
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Hình ảnh
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @id = "txtImage" }, id = "txtImage" })
                            <button id="btnSelectImage"> Chọn ảnh</button>
                            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>

}
